<h1>Eat-Da-Burger!</h1>
<div class = "flex-container">
<div class="left">
<h2>Waiting to be devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class = "center">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca"> Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured"></label><br>
    <input type="hidden" name="devoured" value="1"> <br>
    <input type="radio" name="devoured" value="0" checked> Still to Eat
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

<div class= "right">
<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

